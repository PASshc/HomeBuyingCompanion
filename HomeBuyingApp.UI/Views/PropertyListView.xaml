<UserControl x:Class="HomeBuyingApp.UI.Views.PropertyListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HomeBuyingApp.UI.Views"
             xmlns:converters="clr-namespace:HomeBuyingApp.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:BooleanToYesNoConverter x:Key="BooleanToYesNoConverter"/>
        <converters:NumberWithCommasConverter x:Key="NumberWithCommasConverter"/>
        <converters:StatusToBorderBrushConverter x:Key="StatusToBorderBrushConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <!-- List View -->
        <Grid Visibility="{Binding IsListVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="My Properties" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Refresh" Command="{Binding LoadPropertiesCommand}" Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="Add Property" Command="{Binding AddPropertyCommand}" Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="Edit" Command="{Binding EditPropertyCommand}" Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="Delete" Command="{Binding DeletePropertyCommand}" Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="Export CSV" Command="{Binding ExportCommand}" Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="Import CSV" Command="{Binding ImportCommand}" Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="Backup" Command="{Binding BackupCommand}" Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="Restore" Command="{Binding RestoreCommand}" Margin="0,0,10,0" Padding="10,5"/>
                <CheckBox Content="Show Archived" IsChecked="{Binding ShowArchived}" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Filter Row -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Filter by City:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Text="{Binding FilterCity, UpdateSourceTrigger=PropertyChanged}" Width="150" Margin="0,0,15,0" Padding="5,3"/>
                <TextBlock Text="State:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Text="{Binding FilterState, UpdateSourceTrigger=PropertyChanged}" Width="100" Margin="0,0,15,0" Padding="5,3"/>
                <Button Content="Clear Filters" Click="ClearFilters_Click" Padding="10,5"/>
            </StackPanel>

            <DataGrid Grid.Row="3" ItemsSource="{Binding Properties}" SelectedItem="{Binding SelectedProperty}" 
                      AutoGenerateColumns="False" IsReadOnly="False" SelectionMode="Single"
                      AlternatingRowBackground="#F5F5F5" RowBackground="White"
                      GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#E0E0E0"
                      RowHeight="28">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="BorderThickness" Value="4,0,0,0"/>
                        <Setter Property="BorderBrush" Value="{Binding Status, Converter={StaticResource StatusToBorderBrushConverter}}"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#BBDEFB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="5,4"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#424242"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                        <Setter Property="BorderBrush" Value="#616161"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Archived" Binding="{Binding IsArchived, UpdateSourceTrigger=PropertyChanged}" Width="60" IsReadOnly="False"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80" IsReadOnly="True"/>
                    <DataGridCheckBoxColumn Header="Look At" Binding="{Binding LookAt, UpdateSourceTrigger=PropertyChanged}" Width="60" IsReadOnly="False"/>
                    <DataGridCheckBoxColumn Header="Interest" Binding="{Binding Interest, UpdateSourceTrigger=PropertyChanged}" Width="60" IsReadOnly="False"/>
                    <DataGridTextColumn Header="Rank" Binding="{Binding Rating}" Width="40" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="150" IsReadOnly="True"/>
                    <DataGridTextColumn Header="City" Binding="{Binding City}" Width="100" IsReadOnly="True"/>
                    <DataGridTextColumn Header="State" Binding="{Binding State}" Width="50" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Zip" Binding="{Binding ZipCode}" Width="60" IsReadOnly="True"/>
                    <DataGridTextColumn Header="MLS #" Binding="{Binding MlsNumber}" Width="80" IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="URL" Width="150" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock TextTrimming="CharacterEllipsis" ToolTip="{Binding ListingUrl}">
                                    <Hyperlink NavigateUri="{Binding ListingUrl}" RequestNavigate="Hyperlink_RequestNavigate">
                                        <TextBlock Text="{Binding ListingUrl}"/>
                                    </Hyperlink>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Price" Binding="{Binding ListPrice, Converter={StaticResource CurrencyConverter}}" Width="90" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Est. Offer" Binding="{Binding EstimatedOffer, Converter={StaticResource CurrencyConverter}}" Width="90" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Willing To Pay" Binding="{Binding WillingToPay, Converter={StaticResource CurrencyConverter}}" Width="90" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Beds" Binding="{Binding Bedrooms}" Width="40" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Baths" Binding="{Binding Bathrooms}" Width="40" IsReadOnly="True"/>
                    <DataGridTextColumn Header="SqFt" Binding="{Binding SquareFeet, Converter={StaticResource NumberWithCommasConverter}}" Width="60" IsReadOnly="True"/>
                    <DataGridTextColumn Header="HOA" Binding="{Binding HasHoa, Converter={StaticResource BooleanToYesNoConverter}}" Width="50" IsReadOnly="True"/>
                    <DataGridTextColumn Header="HOA $" Binding="{Binding HoaFee, Converter={StaticResource CurrencyConverter}}" Width="60" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Peter's Notes" Binding="{Binding CommentsPreview}" Width="150" IsReadOnly="True"/>
                    <DataGridTextColumn Header="General Notes" Binding="{Binding NotesPreview}" Width="150" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Detail View -->
        <local:PropertyDetailView DataContext="{Binding CurrentDetailViewModel}" 
                                  Visibility="{Binding DataContext.IsDetailVisible, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</UserControl>
