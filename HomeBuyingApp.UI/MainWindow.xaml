<Window x:Class="HomeBuyingApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBuyingApp.UI"
        xmlns:views="clr-namespace:HomeBuyingApp.UI.Views"
        xmlns:vm="clr-namespace:HomeBuyingApp.UI.ViewModels"
        mc:Ignorable="d"
        Title="Home Buying App" Height="600" Width="900"
        Icon="pack://application:,,,/Resources/homeBuyAppIcon_v2.ico">
    <Grid>
        <TabControl>
            <TabItem Header="Mortgage Calculator &amp; Comparison">
                <views:MortgageComparisonView DataContext="{Binding MortgageComparisonViewModel}"/>
            </TabItem>
            <TabItem Header="My Properties">
                <views:PropertyListView DataContext="{Binding PropertyListViewModel}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
